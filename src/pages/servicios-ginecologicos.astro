---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { getCollection } from 'astro:content';

// Get gynecological services
const servicios = await getCollection('servicios', ({ data }) => {
  return data.category === 'ginecologico';
});

const serviciosOrdenados = servicios.sort((a, b) => a.data.order - b.data.order);
---

<BaseLayout
  title="Servicios Ginecológicos - Zygo"
  description="Paquetes y servicios ginecológicos de Zygo. Chequeos integrales, salud sexual y reproductiva, anticoncepción y más."
>
  <Header />

  <main style="padding-top: 80px;">
    <section class="section">
      <div class="container">
        <header class="section__header" data-animate>
          <h1 class="section__title">Servicios Ginecológicos</h1>
          <p class="section__description">
            Cuidado integral de la salud de la mujer con los más altos estándares de calidad y
            profesionalismo.
          </p>
        </header>

        <div class="grid grid--3">
          {
            serviciosOrdenados.map((servicio) => (
              <ServiceCard
                icon={servicio.data.icon}
                title={servicio.data.title}
                description={servicio.data.description}
              />
            ))
          }
        </div>

        <div class="text-center" style="margin-top: 3rem;" data-animate>
          <a href="/contacto" class="btn btn--primary btn--large"> Agenda tu Consulta </a>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>

