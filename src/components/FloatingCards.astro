    </a>

  </div>
</section>

<style>
  .floating-cards {
    position: relative;
    margin-top: -5rem; /* Flotar sobre el hero */
    z-index: 50;
    padding: 0 var(--spacing-lg);
    margin-bottom: 4rem;
  }

  .floating-cards__container {
    max-width: 1600px;
    margin: 0 auto;
    display: grid;
    /* Mobile: 1 Column */
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  /* Tablet: 2 Columns */
  @media (min-width: 768px) and (max-width: 1024px) {
    .floating-cards__container {
      grid-template-columns: repeat(2, 1fr);
      gap: 2rem;
    }
  }

  /* Desktop: 3 Columns */
  @media (min-width: 1025px) {
    .floating-cards__container {
      grid-template-columns: repeat(3, 1fr);
      gap: 2.5rem;
    }
  }

  .flyer-card {
    display: block;
    width: 100%;
    /* No max-width - let cards fill available space */
    border-radius: 1.5rem;
    overflow: hidden;
    box-shadow: 0 12px 25px -8px rgba(114, 47, 55, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    cursor: pointer;
    background: white;
  }

  .flyer-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 30px -10px rgba(114, 47, 55, 0.3);
  }

  .flyer-img {
    width: 100%;
    height: auto; /* Allow full image height */
    display: block;
  }

  /* Ajustes Responsive */
  @media (max-width: 767px) {
    .floating-cards {
      margin-top: -3rem;
      padding: 0 1rem;
    }
    
    .floating-cards__container {
      gap: 1.5rem;
    }
  }
</style>