<section class="floating-cards">
  <div class="floating-cards__container">
    
    <!-- Flyer 1: Chequeo Esencial -->
    <a href="/servicios/card9" class="flyer-card" data-hero-animate>
      <img src="/img/1.webp" alt="Chequeo Esencial" class="flyer-img" width="500" height="700" loading="lazy" decoding="async" />
    </a>

    <!-- Flyer 2: Chequeo Plus -->
    <a href="/servicios/card10" class="flyer-card" data-hero-animate>
      <img src="/img/card-middle.webp" alt="Chequeo Plus" class="flyer-img" width="500" height="700" loading="lazy" decoding="async" />
    </a>

    <!-- Flyer 3: Chequeo VIP -->
    <a href="/servicios/card11" class="flyer-card" data-hero-animate>
