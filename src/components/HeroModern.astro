---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  ctaText?: string;
  ctaLink?: string;
  badge?: string;
  socialProof?: string;
}

const { title, subtitle = "#1 CLÍNICA OBSTÉTRICA", description, ctaText, ctaLink, badge = "TU SALUD ES NUESTRA PRIORIDAD", socialProof } = Astro.props;
---

<section class="hero-modern">
  <div class="hero-modern__container">
    <div class="hero-modern__content">
      <span class="hero-modern__subtitle" data-hero-animate>{subtitle}</span>
      <h1 class="hero-modern__title" data-hero-animate>
        <slot name="title">
          Acompaña tu <span class="hero-modern__title-accent">maternidad</span> con atención <span class="hero-modern__title-accent">experta</span> y compasiva
        </slot>
      </h1>
      <p class="hero-modern__description" data-hero-animate>{description}</p>
      {ctaText && ctaLink && (
        <a href={ctaLink} class="hero-modern__cta" data-hero-animate>
          {ctaText}
          <svg width="20" height="20" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 15L15 1M15 1H5M15 1V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
      )}
      {socialProof && (
        <p class="hero-modern__social-proof" data-hero-animate>{socialProof}</p>
      )}
    </div>

    <div class="hero-modern__image-container" data-hero-animate>
      <div class="hero-modern__badge">
        <!-- Outer decorative ring -->
        <div class="badge__ring-outer"></div>
        <!-- Inner content -->
        <div class="badge__inner">
          <svg class="badge__star" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
          <span class="badge__text-main">TU SALUD ES</span>
          <span class="badge__text-accent">NUESTRA PRIORIDAD</span>
        </div>
        <!-- Rotating text ring -->
        <svg class="badge__text-ring" viewBox="0 0 200 200">
          <defs>
            <path id="circlePath" d="M 100, 100 m -75, 0 a 75,75 0 1,1 150,0 a 75,75 0 1,1 -150,0"/>
          </defs>
          <text fill="var(--primary-color)" font-size="11" font-weight="600" letter-spacing="3">
            <textPath href="#circlePath">★ CALIDAD CERTIFICADA ★ ATENCIÓN PREMIUM ★ CONFIANZA ★</textPath>
          </text>
        </svg>
      </div>
      <img 
        src="/img-original/portadaNueva.png" 
        alt="Zygo - Atención ginecológica y obstétrica profesional en Lima y Cusco" 
        class="hero-modern__image"
        fetchpriority="high"
        decoding="async"
      />
    </div>
  </div>
</section>

<style>
  .hero-modern {
    position: relative;
    min-height: 92svh;
    display: flex;
    align-items: center;
    padding: 0;
    padding-bottom: 12vh; /* Extends background down without pushing content */
    margin-bottom: -12vh; /* Negative margin to keep cards in same position */
    overflow: hidden;
    /* Degradado refinado */
    background: linear-gradient(-90deg, #FCA4BD 0%, #FCE3F2 50%, #ffffff 100%);
  }

  .hero-modern__container {
    max-width: 1600px;
    width: 100%;
    margin: 0 auto;
    padding: 0 var(--container-padding) 0;
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-md); /* Reduced for mobile */
    align-items: center;
    height: 100%;
  }

  @media (min-width: 1281px) {
    .hero-modern__container {
      grid-template-columns: 1fr 1.1fr;
      padding-bottom: 0;
      align-items: flex-end;
      gap: var(--spacing-2xl);
    }
  }

  .hero-modern__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: clamp(2rem, 4vw, 4rem); /* Reduced more to move content down */
    padding-left: clamp(2rem, 5vw, 6rem); /* Shift content right */
    z-index: 2;
  }

  /* Mobile text center by default for better balance */
  @media (max-width: 1280px) {
    .hero-modern__content {
      align-items: flex-start;
      text-align: left;
      padding-top: 10rem; /* Increased to account for fixed header + new longer title */
      padding-left: var(--container-padding);
      padding-bottom: 0; /* Remove excess space on mobile */
    }
  }

  .hero-modern__subtitle {
    display: inline-block;
    width: fit-content; /* Prevent stretching */
    font-size: var(--font-size-xs); /* Reduced back to smaller */
    font-weight: 700;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--primary-color);
    margin-bottom: var(--spacing-md);
    opacity: 0.9;
    background: rgba(114, 47, 55, 0.08); /* Badge effect */
    padding: 0.35rem 0.7rem;
    border-radius: 2rem;
  }

  .hero-modern__title {
    font-family: 'Playfair Display', 'Georgia', serif;
    /* Reduced for longer title: Mobile 1.8rem -> Desktop 3.5rem */
    font-size: clamp(1.8rem, 4vw + 0.8rem, 3.5rem); 
    line-height: 1.15;
    font-weight: 700;
    color: var(--primary-color);
    margin-bottom: var(--spacing-lg);
    max-width: 700px;
    letter-spacing: -0.02em;
  }

  .hero-modern__title-accent {
    font-style: italic;
    color: var(--cta-color);
  }

  .hero-modern__description {
    font-size: var(--font-size-md); /* Increased from base */
    line-height: 1.6;
    color: var(--text-light);
    margin-bottom: var(--spacing-xl);
    max-width: 600px;
  }

  .hero-modern__cta {
    display: inline-flex;
    width: fit-content; /* Prevent stretching */
    align-items: center;
    gap: 0.75rem;
    padding: 1.1rem 2.75rem; /* Slightly larger */
    background: var(--primary-color);
    color: var(--white);
    font-weight: 600;
    font-size: var(--font-size-base); /* Increased from sm */
    border-radius: 9999px;
    transition: all var(--transition-smooth);
    box-shadow: var(--shadow-soft);
  }

  .hero-modern__cta svg {
    transition: transform var(--transition-smooth);
  }

  .hero-modern__cta:hover {
    background: var(--cta-color);
    transform: translateY(-2px);
    box-shadow: 0 15px 30px -5px rgba(168, 52, 58, 0.3);
  }

  .hero-modern__cta:hover svg {
    transform: translate(3px, -3px);
  }

  .hero-modern__social-proof {
    margin-top: var(--spacing-md);
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-modern__image-container {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 30vh; /* Reduced for mobile */
    display: flex;
    align-items: flex-end;
    justify-content: center;
  }

  .hero-modern__image {
    width: auto;
    max-width: 100%;
    height: auto;
    max-height: 55vh; /* Mobile max height */
    object-fit: contain;
    object-position: bottom center;
    filter: drop-shadow(0 10px 30px rgba(114, 47, 55, 0.2));
  }

  @media (min-width: 1281px) {
    .hero-modern__image-container {
      min-height: 700px;
      justify-content: center;
      margin-right: -5%;
    }

    .hero-modern__image {
      max-width: 122%; /* Slightly increased */
      height: 92vh; /* Slightly increased */
      max-height: none;
    }
  }

  .hero-modern__badge {
    position: absolute;
    top: 38%; /* Lower: was 30% */
    left: -8%; /* More centered: was -12% */
    width: clamp(140px, 20vw, 200px);
    height: clamp(140px, 20vw, 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 10;
    animation: float 3.5s ease-in-out infinite; /* Faster: was 6s */
  }

  /* Fix for mobile badge clipping */
  @media (max-width: 1280px) {
    .hero-modern__badge {
      left: 0;
      top: 25%;
      transform: scale(0.9);
    }
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }

  /* Outer decorative ring */
  .badge__ring-outer {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    background: linear-gradient(135deg, 
      var(--cta-color) 0%, 
      var(--primary-color) 50%,
      var(--cta-color) 100%
    );
    padding: 4px;
    mask: 
      linear-gradient(#fff 0 0) content-box, 
      linear-gradient(#fff 0 0);
    mask-composite: xor;
    -webkit-mask-composite: xor;
    animation: rotate 12s linear infinite;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  /* Inner content circle */
  .badge__inner {
    position: absolute;
    inset: 10px;
    border-radius: 50%;
    background: linear-gradient(180deg, #fff 0%, #fdf6f7 100%);
    box-shadow: 
      inset 0 4px 15px rgba(255, 255, 255, 0.9),
      inset 0 -4px 15px rgba(114, 47, 55, 0.08),
      0 8px 30px rgba(114, 47, 55, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    text-align: center;
  }

  .badge__star {
    width: clamp(28px, 4vw, 38px);
    height: clamp(28px, 4vw, 38px);
    color: var(--cta-color);
    margin-bottom: 0.4rem;
    filter: drop-shadow(0 2px 6px rgba(168, 52, 58, 0.4));
  }

  .badge__text-main {
    font-size: clamp(0.5rem, 1vw, 0.65rem);
    font-weight: 700;
    letter-spacing: 0.1em;
    color: var(--text-light);
    text-transform: uppercase;
  }

  .badge__text-accent {
    font-size: clamp(0.55rem, 1.1vw, 0.7rem);
    font-weight: 800;
    letter-spacing: 0.08em;
    color: var(--primary-color);
    text-transform: uppercase;
    margin-top: 2px;
  }

  /* Rotating text ring SVG */
  .badge__text-ring {
    position: absolute;
    inset: -5px;
    width: calc(100% + 10px);
    height: calc(100% + 10px);
    animation: rotate-reverse 20s linear infinite;
    opacity: 0.7;
  }

  @keyframes rotate-reverse {
    from { transform: rotate(0deg); }
    to { transform: rotate(-360deg); }
  }
</style>

<script>
  import gsap from 'gsap';

  document.addEventListener('astro:page-load', () => {
    const badge = document.querySelector('.hero-modern__badge');
    const image = document.querySelector('.hero-modern__image');
    
    // Safety check - if components aren't present, don't animate
    if (!badge || !image) return;

    // Faster, snappier timeline
    const tl = gsap.timeline({ defaults: { ease: "power3.out" } });

    // Initial states set via JS to avoid FOUC
    gsap.set('[data-hero-animate]', { autoAlpha: 0, y: 20 });
    gsap.set(badge, { scale: 0, autoAlpha: 0 });
    gsap.set(image, { opacity: 0, scale: 0.98, transformOrigin: "bottom center" });

    tl.to('[data-hero-animate]', {
      y: 0,
      autoAlpha: 1,
      duration: 0.6,
      stagger: 0.08,
      delay: 0.1
    })
    .to(image, {
      opacity: 1,
      scale: 1,
      duration: 0.8,
      ease: "back.out(1.2)"
    }, "<0.2")
    .to(badge, {
      scale: 1,
      autoAlpha: 1,
      duration: 0.6,
      ease: "elastic.out(1, 0.75)"
    }, "<0.4");
  });
</script>
