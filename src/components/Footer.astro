        <nav class="footer-professional__nav">
          <h3 class="footer-professional__nav-title">Enlaces Rápidos</h3>
          <ul class="footer-professional__nav-list">
            <li><a href="/equipo">Nosotros</a></li>
            <li><a href="/servicios">Servicios</a></li>
            <li><a href="/testimonios">Testimonios</a></li>
            <li><a href="/acerca-de">Acerca de</a></li>
            <li><a href="/contacto">Contacto</a></li>
          </ul>
        </nav>
      </div>
    </div>

    <!-- Columna 3: CTA + Redes Sociales -->
    <div class="footer-professional__column footer-professional__column--cta" data-animate="right">
      <a href="/contacto" class="footer-professional__cta-button">
        Agenda tu Cita
        <svg width="20" height="20" viewBox="0 0 16 16" fill="none">
          <path d="M1 15L15 1M15 1H5M15 1V11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
      
      <div class="footer-professional__social">
        <p class="footer-professional__social-title">Síguenos</p>
        <div class="footer-professional__social-icons">
          <a
            href="https://www.facebook.com/profile.php?id=61564505164182"
            aria-label="Facebook"
