---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  specialty: string;
  image: string | ImageMetadata;
  bio?: string;
}

const { name, specialty, image, bio } = Astro.props;
---

<article class="text-center" data-animate>
  <div
    style="position: relative; width: 100%; aspect-ratio: 4/5; overflow: hidden; border-radius: var(--border-radius-xl); box-shadow: var(--shadow-xl); margin-bottom: 1rem;"
  >
    {
      typeof image === 'string' ? (
        <img
          src={image}
          alt={name}
          style="width: 100%; height: 100%; object-fit: cover;"
        />
      ) : (
        <Image
          src={image}
          alt={name}
          width={400}
          height={500}
          style="width: 100%; height: 100%; object-fit: cover;"
        />
      )
    }
  </div>
  <h3 style="color: var(--primary-color); margin-bottom: 0.25rem;">{name}</h3>
  <p style="color: var(--text-light);">{specialty}</p>
  {bio && <p style="color: var(--text-light); margin-top: 0.5rem; font-size: 0.875rem;">{bio}</p>}
</article>

