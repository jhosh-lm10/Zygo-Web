---
import { getCollection } from 'astro:content';

const equipo = await getCollection('equipo');
const equipoOrdenado = equipo.sort((a, b) => a.data.order - b.data.order);
---

<section class="team-sticky-section">
  <div class="team-sticky-section__container">
    <!-- Columna Izquierda - Sticky Info -->
    <div class="team-sticky-section__sidebar">
      <div class="team-sticky-section__info">
        <span class="team-sticky-section__badge"># NUESTRO EQUIPO</span>
        <h2 class="team-sticky-section__title">
          Profesionales expertos comprometidos con tu <span class="team-sticky-section__title-accent">bienestar</span>
        </h2>
        <p class="team-sticky-section__description">
          Nuestro equipo de obstetras altamente calificadas combina años de experiencia, 
          conocimiento especializado y un enfoque centrado en la paciente para brindarte 
          el mejor cuidado posible durante esta etapa tan especial.
        </p>
        <div class="team-sticky-section__stats">
          <div class="team-sticky-section__stat">
            <span class="team-sticky-section__stat-number">15+</span>
            <span class="team-sticky-section__stat-label">Años de Experiencia</span>
          </div>
          <div class="team-sticky-section__stat">
            <span class="team-sticky-section__stat-number">1000+</span>
            <span class="team-sticky-section__stat-label">Partos Exitosos</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Columna Derecha - Lista de Doctores -->
    <div class="team-sticky-section__list">
      {equipoOrdenado.map((miembro, index) => (
        <article class="team-card" data-animate style={`animation-delay: ${index * 0.1}s`}>
          <div class="team-card__image-wrapper">
            <img 
              src={miembro.data.image} 
              alt={miembro.data.name}
              class="team-card__image"
            />
          </div>
          <div class="team-card__content">
            <h3 class="team-card__name">{miembro.data.name}</h3>
            <p class="team-card__role">{miembro.data.specialty}</p>
            {/* Bio removed to match 'Acerca de' square style exactly, as requested for unification */}
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .team-sticky-section {
    padding: 6rem var(--spacing-lg);
    background: var(--white);
  }

  .team-sticky-section__container {
    max-width: 1400px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
  }

  @media (min-width: 1024px) {
    .team-sticky-section__container {
      grid-template-columns: 1fr 2fr;
      gap: 6rem;
    }
  }

  /* Sidebar Sticky */
  .team-sticky-section__sidebar {
    position: relative;
  }

  @media (min-width: 1024px) {
    .team-sticky-section__info {
      position: sticky;
      top: 8rem; /* 128px */
    }
  }

  .team-sticky-section__badge {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: var(--primary-color);
    margin-bottom: 1.5rem;
    padding: 0.5rem 1rem;
    background: rgba(114, 47, 55, 0.08);
    border-radius: 2rem;
  }

  .team-sticky-section__title {
    font-family: 'Playfair Display', 'Georgia', serif;
    font-size: clamp(2rem, 4vw, 3rem);
    line-height: 1.2;
    font-weight: 700;
    color: var(--text-color);
    margin-bottom: 1.5rem;
  }

  .team-sticky-section__title-accent {
    font-style: italic;
    color: var(--primary-color);
  }

  .team-sticky-section__description {
    font-size: 1rem;
    line-height: 1.7;
    color: var(--text-light);
    margin-bottom: 2.5rem;
  }

  .team-sticky-section__stats {
    display: flex;
    gap: 3rem;
    padding-top: 2rem;
    border-top: 2px solid rgba(114, 47, 55, 0.1);
  }

  .team-sticky-section__stat {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .team-sticky-section__stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1;
  }

  .team-sticky-section__stat-label {
    font-size: 0.875rem;
    color: var(--text-light);
    line-height: 1.4;
  }

  /* Lista de Doctores - Ahora Grid */
  .team-sticky-section__list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 2rem;
  }

  /* Team Card - Diseño Vertical Square (Unificado) */
  .team-card {
    display: flex;
    flex-direction: column;
    background: transparent; /* Clean look */
    text-align: left;
    transition: transform 0.3s ease;
  }

  .team-card:hover {
    transform: translateY(-5px);
  }

  .team-card__image-wrapper {
    background: #e8e8e8;
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 1 / 1.1;
    margin-bottom: 1rem;
    box-shadow: 0 10px 20px rgba(0,0,0,0.05);
  }

  .team-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    transition: transform 0.5s ease;
  }

  .team-card:hover .team-card__image {
    transform: scale(1.05);
  }

  .team-card__content {
    display: flex;
    flex-direction: column;
  }

  .team-card__name {
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 0.25rem;
    font-family: 'Manrope', sans-serif;
  }

  .team-card__role {
    font-size: 0.9rem;
    color: var(--text-gray);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 767px) {
    .team-sticky-section__list {
      grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
      justify-content: center;
    }
    
    .team-card {
      align-items: center;
      text-align: center;
    }
  }
</style>

